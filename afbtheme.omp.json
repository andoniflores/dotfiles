{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "version": 2,
  "final_space": true,
  "console_title_template": "{{ .Shell }} in {{ .Folder }}",
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "session",
          "style": "diamond",
          "foreground": "#DCD7BA",
          "background": "#957FB8",
          "leading_diamond": "",
          "trailing_diamond": "",
          "template": " {{ .UserName }} "
        },
        {
          "type": "path",
          "style": "diamond",
          "leading_diamond": "",
          "trailing_diamond": "",
          "foreground": "#DCD7BA",
          "background": "#D27E99",
          "template": "  {{ .Path }} ",
          "properties": {
            "folder_separator_icon": " \ue0b1 ",
            "home_icon": "~",
            "style": "folder"
          }
        },
        {
          "type": "git",
          "style": "diamond",
          "leading_diamond": "",
          "trailing_diamond": "",
          "foreground": "#193549",
          "background": "#E6C384",
          "background_templates": [
            "{{ if or (.Working.Changed) (.Staging.Changed) }}#FFA066{{ end }}",
            "{{ if and (gt .Ahead 0) (gt .Behind 0) }}#E82424{{ end }}",
            "{{ if gt .Ahead 0 }}#B388FF{{ end }}",
            "{{ if gt .Behind 0 }}#B388FF{{ end }}"
          ],
          "template": " {{ .UpstreamIcon }}{{ .HEAD }}{{if .BranchStatus }} {{ .BranchStatus }}{{ end }}{{ if .Working.Changed }} \uf044 {{ .Working.String }}{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} |{{ end }}{{ if .Staging.Changed }} \uf046 {{ .Staging.String }}{{ end }}{{ if gt .StashCount 0 }} \ueb4b {{ .StashCount }}{{ end }} ",
          "properties": {
            "branch_max_length": 25,
            "fetch_stash_count": true,
            "fetch_status": true,
            "fetch_upstream_icon": true
          }
        },
        {
          "type": "python",
          "style": "diamond",
          "leading_diamond": "",
          "trailing_diamond": "",
          "foreground": "#DCD7BA",
          "background": "#6A9589",
          "template": "{{ if .Error }}{{ .Error }}{{ else }}{{ if .Venv }} {{ .Venv }} {{ end }}{{ end }}"
        },
        {
          "type": "status",
          "style": "diamond",
          "foreground": "#DCD7BA",
          "background": "#2B3328",
          "status_template": [
            "{{ if eq .Code 0 }}\uf00c{{ else }}\uf071{{ end }}"
          ],
          "leading_diamond": "",
          "trailing_diamond": "",
          "template": " 󱐋 ",
          "properties": {
            "always_enabled": true
          }
        }
      ]
    }
  ]
}
